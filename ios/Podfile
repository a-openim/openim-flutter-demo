# Uncomment this line to define a global platform for your project
platform :ios, '13.0'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure flutter pub get is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Generated.xcconfig, then run flutter pub get"
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_ios_podfile_setup

target 'Runner' do
  use_frameworks!
  # use_modular_headers!

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
    target.build_configurations.each do |config|
      if target.name == 'Pods-Runner'
        xcconfig_path = config.base_configuration_reference.real_path

        # Read from xcconfig to build_settings dictionary
        # Handle potential empty or malformed lines in xcconfig
        build_settings = {}
        File.read(xcconfig_path).lines.each do |line|
          line.strip!
          next if line.empty? || line.start_with?('#') || line.start_with?('//')
          key_value = line.split('=', 2)
          if key_value.length == 2
            build_settings[key_value[0].strip] = key_value[1].strip
          end
        end

        flutter_sdk_root = flutter_root()
        flutter_xcframework_base_path = File.join(flutter_sdk_root, 'bin', 'cache', 'artifacts', 'engine', 'ios', 'Flutter.xcframework')
        simulator_path = "\"#{File.join(flutter_xcframework_base_path, 'ios-arm64_x86_64-simulator')}\""
        device_path = "\"#{File.join(flutter_xcframework_base_path, 'ios-arm64')}\""

        # Modify FRAMEWORK_SEARCH_PATHS for simulator
                current_simulator_search_paths = build_settings['FRAMEWORK_SEARCH_PATHS[sdk=iphonesimulator*]'] || '$(inherited)'
                if current_simulator_search_paths.include?('$(inherited)')
                  current_simulator_search_paths = current_simulator_search_paths.gsub('$(inherited)', '').strip
                  build_settings['FRAMEWORK_SEARCH_PATHS[sdk=iphonesimulator*]'] = "$(inherited) #{current_simulator_search_paths} #{simulator_path}".strip
                else
                  build_settings['FRAMEWORK_SEARCH_PATHS[sdk=iphonesimulator*]'] = "#{current_simulator_search_paths} #{simulator_path}".strip
                end

                # Modify FRAMEWORK_SEARCH_PATHS for device
                current_device_search_paths = build_settings['FRAMEWORK_SEARCH_PATHS[sdk=iphoneos*]'] || '$(inherited)'
                if current_device_search_paths.include?('$(inherited)')
                  current_device_search_paths = current_device_search_paths.gsub('$(inherited)', '').strip
                  build_settings['FRAMEWORK_SEARCH_PATHS[sdk=iphoneos*]'] = "$(inherited) #{current_device_search_paths} #{device_path}".strip
                else
                  build_settings['FRAMEWORK_SEARCH_PATHS[sdk=iphoneos*]'] = "#{current_device_search_paths} #{device_path}".strip
                end

                # Modify OTHER_LDFLAGS
                current_other_ldflags = build_settings['OTHER_LDFLAGS'] || '$(inherited)'
                if current_other_ldflags.include?('$(inherited)')
                  current_other_ldflags = current_other_ldflags.gsub('$(inherited)', '').strip
                  build_settings['OTHER_LDFLAGS'] = "$(inherited) #{current_other_ldflags} -framework Flutter".strip
                else
                  build_settings['OTHER_LDFLAGS'] = "#{current_other_ldflags} -framework Flutter".strip
                end

                # Explicitly set ALWAYS_EMBED_SWIFT_STANDARD_LIBRARIES to NO
                build_settings['ALWAYS_EMBED_SWIFT_STANDARD_LIBRARIES'] = 'NO'

                # Write build_settings dictionary to xcconfig
                File.open(xcconfig_path, "w") do |file|
                  build_settings.each do |key,value|
                    file.puts "#{key} = #{value}"
                  end
                end
      end

      config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] ||= [
        '$(inherited)',
        'PERMISSION_CAMERA=1',
        'PERMISSION_MICROPHONE=1',
        'PERMISSION_PHOTOS=1',
        'PERMISSION_LOCATION=1',
        'PERMISSION_NOTIFICATIONS=1',
      ]
    end
  end
end
